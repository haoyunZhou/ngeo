{
    "compilerOptions": {
      /* Basic Options */
      "target": "ES6",
      "module": "system",
      "lib": ["es2017", "dom"],
      "allowJs": true,
      "checkJs": true,
      "noEmit": true,
      "baseUrl": "./",
      "paths": {
        "ngeo/*": ["src/*"],
        "gmf/*": ["contribs/gmf/src/*"],
        // "ol/*": ["node_modules/ol/*"],
        // Temporary, run that to use it:
        // npm install --prefix openlayers_src https://api.github.com/repos/openlayers/openlayers/tarball/v5.3.0
        "ol/*": ["openlayers_src/node_modules/ol/src/ol/*"],
        "olcs/*": ["node_modules/ol-cesium/src/olcs/*"]
      }
    },
    "include": [
      "src/**/*.js",
//      "contribs/gmf/src/**/*.js"
    ]
}
